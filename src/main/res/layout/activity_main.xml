<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7ED59E"
                android:fontFamily="sans-serif-black"
                android:padding="10sp"
                android:text="IoT Medicine App"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <View
                android:id="@+id/dividerfs"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <TextView
                android:id="@+id/textView4sdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date and Time Setting"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/datetimesyncButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync" />

            <DatePicker
                android:layout_width="match_parent"
                android:id="@+id/datepicker"
                android:layout_height="wrap_content" />

            <TimePicker
                android:id="@+id/timepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/datetimesaveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicine Boxes"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <Button
                android:id="@+id/medsyncButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicine 1"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/med1name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="Name" />

            <EditText
                android:id="@+id/med1Stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicine 2"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/med2name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="Name" />

            <EditText
                android:id="@+id/med2Stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicine 3"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/med3name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="Name" />

            <EditText
                android:id="@+id/med3Stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/medsaveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <View
                android:id="@+id/dividerfs3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <TextView
                android:id="@+id/textView4sdf3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/historySync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="History Will Show Here" />
                </LinearLayout>
            </ScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <View
                android:id="@+id/dividerfs2"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <TextView
                android:id="@+id/textView4sdf2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedules"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/scheduleSyncButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/s1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Med1"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TimePicker
                    android:id="@+id/schedule1picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/s1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Med2"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TimePicker
                    android:id="@+id/schedule2picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/s1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Med3"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TimePicker
                    android:id="@+id/schedule3picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <Button
                android:id="@+id/saveScheduleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Save Schedule" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <View
                android:id="@+id/dividerfs4"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp" />

            <TextView
                android:id="@+id/textView4sdf4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manually Open Med Box"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/medBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open MedBox 1" />

            <Button
                android:id="@+id/medBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open MedBox 2" />

            <Button
                android:id="@+id/medBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open MedBox 3" />

        </LinearLayout>
</ScrollView>